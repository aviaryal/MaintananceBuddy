<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view_resident_emergency_profile"
    android:fillViewport="true"
    android:gravity="top"
    tools:context=".Emergency_Contact_Information"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:orientation="vertical"
            android:verticalScrollbarPosition="right"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/emergency_Contact"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="cursive"
            android:text="Emergency Contact Information"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Name_resident_profile"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/display_EmergencyName_resident_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Relationship_resident_profile"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/relationship" />

            <TextView
                android:id="@+id/display_EmergencyRelationship_resident_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Phone_resident_profile"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Phone" />

            <TextView
                android:id="@+id/display_EmergencyPhone_resident_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Email_resident_profile"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Email" />


            <TextView
                android:id="@+id/display_EmergencyEmail_resident_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

            <Button
                android:id="@+id/emergency_return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Resident Profile" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>