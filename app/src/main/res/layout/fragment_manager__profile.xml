<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_manager_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="top"
    tools:context=".Manager_Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/manager_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:orientation="vertical"
            android:verticalScrollbarPosition="right"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/overview_Manager_Account"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:inputType="none"
                android:text="Overview "
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/managerImageView"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24"
                android:contentDescription="TODO"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manager_resident"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Name " />

                <TextView
                    android:id="@+id/display_manager_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email_manager"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Email " />

                <TextView
                    android:id="@+id/display_Manager_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" " />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manager_phone_No"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Cell Phone " />

                <TextView
                    android:id="@+id/display_Manager_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" " />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_phone" />


            <Button
                android:id="@+id/addCommunityPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add a new Community Post" />

            <Button
                android:id="@+id/updateInfoManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update Your Info" />

            <Button
                android:id="@+id/viewRentersInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Renter's Insurance" />

            <Button
                android:id="@+id/viewMaintenanceManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Maintenance Record" />

            <Button
                android:id="@+id/contactUs_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Us" />

            <Button
                android:id="@+id/manager_signout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sign Out" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


