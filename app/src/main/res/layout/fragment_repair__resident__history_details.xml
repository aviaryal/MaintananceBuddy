<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Repair_Resident_History_details"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/repair_history_details_resident_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="center"
                    android:text="Type"
                    android:textSize="24sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/repair_history_details_resident_type_firebase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/repair_history_details_resident_type"
                    android:gravity="center"
                    android:text="Type_Firebase"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="98dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                <TextView
                    android:id="@+id/repair_history_details_resident_location"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="center"
                    android:text="Location"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="235dp" />

                <TextView
                    android:id="@+id/repair_history_details_resident_location_firebase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/repair_history_details_resident_location"
                    android:gravity="center"
                    android:text="Location_firbase"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="98dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

                <TextView
                    android:id="@+id/repair_history_details_resident_status"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="center"
                    android:text="Status"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="235dp" />

                <TextView
                    android:id="@+id/repair_history_details_resident_status_firebase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/repair_history_details_resident_status"
                    android:gravity="center"
                    android:text="Status_Firebase"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="98dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                <TextView
                    android:id="@+id/repair_history_details_resident_description"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="center"
                    android:text="Descritption"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="235dp" />

                <TextView
                    android:id="@+id/repair_history_details_resident_description_firebase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/repair_history_details_resident_description"
                    android:gravity="center"
                    android:text="Description_firbase"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="98dp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/imageView_Resident_History"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radio_group"
                tools:src="@tools:sample/avatars" />

            <FrameLayout
                android:id="@+id/resident_videoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_Resident_History"
                app:layout_constraintEnd_toEndOf="parent">

                <VideoView
                    android:id="@+id/videoView_resident_history"
                    android:layout_width="310dp"
                    android:layout_height="253dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="0.496" />
            </FrameLayout>


            <Button
                android:id="@+id/resident_edit_repair_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Repair request"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="visible"
                android:background="@drawable/rounded_button"
                app:layout_constraintTop_toBottomOf="@+id/resident_videoContainer" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#dbeceb"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

                <RadioButton
                    android:id="@+id/ongoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ongoing"
                    />

                <RadioButton
                    android:id="@+id/completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    />


            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>