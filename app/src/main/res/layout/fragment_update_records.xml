<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/linearLayout_update_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:orientation="vertical"
        android:verticalScrollbarPosition="right"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/edit_information_update_records"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="@dimen/text_margin"
            android:fontFamily="cursive"
            android:text="Edit Your Information"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_resident_update_records"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Email " />

            <TextView
                android:id="@+id/display_Email_update_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter a valid email ex ...@gmail.com"
                android:text=" " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_resident_update_records"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Name " />

                <TextView
                    android:id="@+id/display_name_update_records"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_No_update_records"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Cell Phone " />

            <TextView
                android:id="@+id/display_phone_update_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" " />
        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display_phone" />/>

        <TextView
            android:id="@+id/emergency_Contact_update_records"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="@dimen/text_margin"
            android:fontFamily="cursive"
            android:text="Emergency Contact Information"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Name_update_records"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/display_EmergencyName_update_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Relationship_update_records"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Relationship" />

            <TextView
                android:id="@+id/display_EmergencyRelationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Phone_update_records"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Phone" />

            <TextView
                android:id="@+id/display_EmergencyPhone_update_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emergency_Email_update_records"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Email" />


            <TextView
                android:id="@+id/display_EmergencyEmail_update_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/save_edit_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text="Save "
        app:layout_constraintEnd_toStartOf="@+id/cancel_edit_changes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_update_records" />

    <Button
        android:id="@+id/cancel_edit_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="140dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/save_edit_changes"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_update_records" />

</androidx.constraintlayout.widget.ConstraintLayout>

